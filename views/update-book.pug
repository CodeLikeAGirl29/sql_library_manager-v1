extends layout

block content
head
  title A Brief History of Time
  link(rel='stylesheet' href='../public/stylesheets/style.css')
header.form-header
  .container
    form#book
      h1 Update Book
      .form-row
        p
          label(for='title') Title
          input#title(name='title' type='text' value='The Hunger Games')
      .form-row
        p
          label(for='author') Author
          input#author(name='author' type='text' value='Suzanne Collins')
      .form-row
        p
          label(for='genre') Genre
          input#genre(name='genre' type='text' value='Fantasy')
      .form-row
        p
          label(for='year') Year
          input#year(name='year' type='text' value='2008')
      .button-box
        p.left
          input(type='submit' value='Update Book')
        p.cancel
          a.button(href='all_books.html') Cancel
        p
          input.right(type='submit' value='Delete Book')
        p
    .button-box
      form(method='post' action='/books/8/delete' onsubmit="return confirm('Do you really want to delete this book?');")
